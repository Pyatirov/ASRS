<Window x:Class="CompModeling.AddReactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompModeling"
        mc:Ignorable="d"
        Title="Добавить реакцию" Height="200" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="44*"/>

            <!--<ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="44*"/>-->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <!--<RowDefinition Height="21*"/>-->
            <RowDefinition Height="42*"/>

        </Grid.RowDefinitions>
        <TextBox x:Name="txtKInp1" FontSize="24" TextAlignment="Center" Tag="KInp1" Grid.Column="0" Margin="10,15,5,0"/>
        <TextBox x:Name="txtInp1" FontSize="24" Tag="Inp1" Grid.Column="1" Margin="5,15,0,0"/>
        <!--<TextBox x:Name="txtInd1" FontSize="24" Tag="Ind1" Grid.Row="1" Grid.Column="2" Margin="0,5,0,0"/>-->
        
        <TextBox x:Name="txtKInp2" FontSize="24" TextAlignment="Center" Tag="KInp2" Grid.Column="3" Margin="10,15,5,0"/>
        <TextBox x:Name="txtInp2" FontSize="24" Tag="Inp2" Grid.Column="4" Margin="5,15,0,0"/>
        <!--<TextBox x:Name="txtInd2" FontSize="24" Tag="Ind2" Grid.Row="1" Grid.Column="6" Margin="0,5,0,0"/>-->
        
        <TextBox x:Name="txtKInp3" FontSize="24" TextAlignment="Center" Tag="KInp3" Grid.Column="6" Margin="10,15,5,0"/>
        <TextBox x:Name="txtInp3" FontSize="24" Tag="Inp3" Grid.Column="7" Margin="5,15,0,0"/>
        <!--<TextBox x:Name="txtInd3" FontSize="24" Tag="Ind3" Grid.Row="1" Grid.Column="10" Margin="0,5,0,0"/>-->
        
        <TextBox x:Name="txtKProd" FontSize="24" TextAlignment="Center" Tag="KProd" Grid.Column="9" Margin="15,15,10,0"/>
        <TextBox x:Name="txtProd" FontSize="24" Tag="InpProd" Grid.Column="10" Margin="5,15,0,0"/>

        <Button Content="Сохранить" Click="BtnSave_Click" Grid.Row="2" Grid.ColumnSpan="14" Margin="10,15,10,10" Height="40" Width="200"/>
        
        <TextBlock Text="+" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="2"/>
        <TextBlock Text="+" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="5"/>
        <TextBlock Text="=" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="8"/>

    </Grid>
</Window>
