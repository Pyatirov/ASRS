<Window x:Class="CompModeling.AddInputConcentrations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompModeling"
        mc:Ignorable="d"
        Title="Добавить исходную концентрацию" Height="200" Width="300">
    <Grid>
        <Label Content="Название формы" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Значение" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"/>
        <Label Content="Фаза" HorizontalAlignment="Left" Margin="10,83,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="addedName"  HorizontalAlignment="Left" Margin="131,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="addedValue"  HorizontalAlignment="Left" Margin="131,52,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="addedPhase"  HorizontalAlignment="Left" Margin="131,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="addConcentration" Content="Добавить" HorizontalAlignment="Left" Margin="63,128,0,0" VerticalAlignment="Top" Click="addConcentration_Click"/>
        <Button x:Name="clearAll" Content="Очистить" HorizontalAlignment="Left" Margin="163,128,0,0" VerticalAlignment="Top" Click="clearAll_Click"/>
    </Grid>
</Window>
