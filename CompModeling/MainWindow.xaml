<Window x:Class="CompModeling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompModeling"
        mc:Ignorable="d"
        Title="АСНИ" Height="250" Width="250" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="specialistInterfaceButton" Content="СПЕЦИАЛИСТ" FontWeight="Bold"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="190" Height="53" Click="specialistInterfaceButton_Click" Margin="0,0,0,5"/>
        <Button x:Name="researcherInterfaceButton" Content="ИССЛЕДОВАТЕЛЬ" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Height="52" Click="researcherInterfaceButton_Click" Width="190" Grid.Row="1" Margin="0,5,0,0"/>
    </Grid>
</Window>
