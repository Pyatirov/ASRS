<Window x:Class="CompModeling.ResearcherInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompModeling"
        mc:Ignorable="d"
        Title="Исследователь" Height="1280" Width="720" ResizeMode="NoResize" WindowState="Maximized">
        <Grid>
            <TabControl>
                <TabItem Header="Эксперимент">
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Left" Margin="5,0,0,0" TextWrapping="Wrap" Text="Механизм реакции" VerticalAlignment="Center" Height="16" Width="106"/>
                        <ComboBox x:Name="cb_mechanismName" Grid.ColumnSpan="2" SelectedIndex="0" SelectionChanged="cb_mechanismName_SelectionChanged" DisplayMemberPath="Info" HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Center" Width="252" Height="21" ItemsSource= "{Binding Mechanisms}"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="3" Margin="0,110,0,80" Grid.RowSpan="3">
                            <WrapPanel x:Name="reactionInputsPanel" Margin="10" ItemWidth="350">
                                <WrapPanel.Resources>
                                    <Style TargetType="Grid">
                                        <Setter Property="Margin" Value="0,5"/>
                                    </Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,10,0"/>
                                        <Setter Property="Width" Value="100"/>
                                    </Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Width" Value="70"/>
                                    </Style>
                                </WrapPanel.Resources>
                            </WrapPanel>
                        </ScrollViewer>
                        <Button x:Name="calculate" Content="Расчет" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" Height="31" Grid.Column="1" Margin="2,0,0,0"/>
                        <TextBox x:Name="tb_result" Grid.Row="2" TextWrapping="Wrap" Grid.RowSpan="3" Grid.ColumnSpan="3" IsReadOnly="True" Background="#d3d3d3" Margin="0,80,0,0"/>
                    </StackPanel>
                </TabItem>
            <TabItem Header="Механизм реакции">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="328*"/>
                        <RowDefinition Height="21*"/>
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="dataGrid_Mechanisms" AutoGenerateColumns="False" Margin="10,0,10,0" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="30"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Info}" Width="*"/>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Удалить" Padding="5 2" Margin="3" Click="delete_Mechanism_Click" Tag="{Binding ID}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="update_Mechanism" Content="Обновить список" Click="update_Mechanism_Click" Margin="10,10,10,10" Grid.Row="1" Grid.Column="1"/>
                    <Button x:Name="add_Mechanism" Content="Добавить механизм" Click="add_Mechanism_Click" Margin="10,10,10,10" Grid.Row="1"/>
                </Grid>
                </TabItem>
                <TabItem Header="Экспериментальные точки">
                    <!-- Выбор механизма -->
                    <StackPanel>
                        <TextBlock Text="Выберите механизм:" Margin="10,0,0,0"/>
                        <ComboBox x:Name="cbMechanisms" DisplayMemberPath="Info" SelectionChanged="cbMechanisms_SelectionChanged" Margin="10,0,10,0"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <WrapPanel x:Name="pointInputsPanel" Margin="10" ItemWidth="350">
                                <WrapPanel.Resources>
                                    <Style TargetType="Grid">
                                        <Setter Property="Margin" Value="0,5"/>
                                    </Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Margin" Value="0,0,10,0"/>
                                        <Setter Property="Width" Value="100"/>
                                    </Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Width" Value="70"/>
                                    </Style>
                                </WrapPanel.Resources>
                            </WrapPanel>
                        </ScrollViewer>
                        <Button Content="Добавить точку" Margin="10,0,10,0"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </Grid>
</Window>
